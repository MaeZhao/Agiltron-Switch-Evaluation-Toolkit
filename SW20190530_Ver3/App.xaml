<Application x:Class="SW20190530_Ver3.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SW20190530_Ver3"
             StartupUri="MainWindow.xaml">
    <Application.Resources>


        <!--<Style TargetType="NavigationWindow">
            <Setter Property="WindowStyle" Value="None""#1A2855" />
            <Setter Property="ResizeMode" Value="CanResize" />
            <Setter Property="AllowsTransparency" Value="True"  />
        </Style>-->



        <Style TargetType="Button">
            <Setter Property="Background" Value="#223C69"   />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="BorderThickness" Value="0"></Setter>
        </Style>

        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
            <Setter Property="Foreground" Value= "#131D3E"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Helvetica" />
        </Style>

        <Style TargetType="MenuItem">
            <Setter Property="FontFamily" Value="Helvetica" />
            <Setter Property="Foreground" Value="Black" />

        </Style>

    </Application.Resources>
</Application>
